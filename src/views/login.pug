doctype html 
html 
    head 
        title Eventiro - Sign Up 
        link(rel="stylesheet", href="/static/css/login.css")
        link(rel="stylesheet", href="/static/css/home.css")
        link(rel="shortcut icon", href="/static/img/favicon.png", type="image/x-icon")
        script(src="https://kit.fontawesome.com/9031ae7b04.js", crossorigin="anonymous")
        script(src="/static/js/show.js", defer)

    body 
        header 
            nav.navbar 
                a(href="/").navbar__logo 
                    img(src="/static/img/logo.png").navbar__logo--img
                ul.navbar__list 
        main 
            .circles#circle1 
            .circles#circle2

            .container 
                h1.container__title Log In
                form.container__form( action="/login" method="POST")
                    .container__form--field
                        label.container__form--field__label Email
                        .container__form--field__data
                            i.far.fa-envelope.container__form--field__data__input--icon
                            input(type="email", name="email", autocomplete="off", placeholder="Enter the email associated with your account").container__form--field__data__input
                    .container__form--field
                        label.container__form--field__label Password
                        .container__form--field__data
                            i.fas.fa-lock.container__form--field__data__input--icon
                            input(type="password", name="password", autocomplete="off", placeholder="Enter your super secret password").container__form--field__data__input#form__password
                            button(type="button").container__form--field__data--show Show
                    .container__form--submit
                        button(type="submit").container__form--submit__btn Log In
                    .container__form--login 
                        span.container__form--login__text Not Registered Yet? 
                        a.container__form--login__link(href="/register") Register
